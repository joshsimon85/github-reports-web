<div class="row clearfix">
  <div class="col-lg-12">
    <h1>Gists</h1>
    <p class="pull-left">Showing page <%= @gists.page %> of <%= pluralize(@gists.total_pages, "page") %>.</p>
    <p class="pull-right">
      <%= link_to "Create a new Gist", new_gist_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>Public?</th>
          <th>Created</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @gists.items.each do |gist| %>
          <tr>
            <td><%= link_to gist.description.present? ? gist.description : "untitled", gist_path(gist.id) %></td>
            <td><% if gist.public %><span class="glyphicon glyphicon-eye-open" /><% end %></td>
              <td><%= gist.created_at %></td>
              <td class="delete-button"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
