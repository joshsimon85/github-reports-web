<h1>Create a new Gist</h1>

<%= form_for @gist_form, url: gists_path, class:"form" do |f| %>

  <% if @gist_form.errors.any? %>
    <ul>
      <% @gist_form.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :file_name %>
    <%= f.text_field :file_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :file_contents %>
    <%= f.text_area :file_contents, class: "form-control" %>
  </div>

  <%= button_tag "Create Gist", name: nil, class: "btn btn-primary" %>
<% end %>

